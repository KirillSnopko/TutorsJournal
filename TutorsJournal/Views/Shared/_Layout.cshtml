<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Журнал</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/popper/umd/popper.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/lib/moment.js/moment-with-locales.min.js"></script>



    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */
        .navbar {
            margin-bottom: 0;
            border-radius: 0;
            background-color: #212529 !important;
        }

        /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
        .row.content {
            height: 100%
        }

        /* Set gray background color and 100% height */
        .sidenav {
            padding-top: 20px;
            background-color: #f1f1f1;
            height: 100%;
        }

        /* Set black background color, white text and some padding */
        footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    Журнал
                </a>
                <div class="dropdown dropstart d-flex">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item position-relative" href="~/Student/">
                                Ученики
                                <span class="position-absolute top-4 start-90 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item position-relative" href="/">
                                Предметы
                                <span class="position-absolute top-4 start-90 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        </li>
                        <li><a class="dropdown-item" href="#">План занятий</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2">
            </div>


            <div class="col-sm-8 text-center ">
                @RenderBody()

            </div>


            <div class="col-sm-2">
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>